#follow-up duration

#main cohort: define end of follow-up
dementia_data2 <- dementia_data2 %>%
  mutate(
    end_of_followup = as.Date(pmin(dod, tod, lcd, as.Date("2018-11-30"), na.rm = TRUE)),
    end_of_followup = dplyr::if_else(end_of_followup < admidate_0, admidate_0, end_of_followup),
    followup_days = as.numeric(end_of_followup - admidate_0)
  )


#create follow-up days variable
dementia_data2 <- dementia_data2 %>%
  mutate(
    followup_days = as.numeric(end_of_followup - admidate_0)
  )

summary(dementia_data2$followup_days)



#readmitted cohort
dementia_data4 <- dementia_data4 %>%
  mutate(
    end_of_followup = as.Date(pmin(dod, tod, lcd, as.Date("2018-11-30"), na.rm = TRUE)),
    end_of_followup = dplyr::if_else(end_of_followup < admidate_0, admidate_0, end_of_followup),
    followup_days = as.numeric(end_of_followup - admidate_0)
  )


#create follow-up days variable
dementia_data4 <- dementia_data4 %>%
  mutate(
    followup_days = as.numeric(end_of_followup - admidate_0)
  )

summary(dementia_data4$followup_days)



