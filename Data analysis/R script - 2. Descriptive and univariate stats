#Chisquared analyses

#age
CrossTable(dementia_data$Readmission, dementia_data$AgeGrouped, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#gender
CrossTable(dementia_data$Readmission, dementia_data$gender, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#COPD
CrossTable(dementia_data$Readmission, dementia_data$COPD, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#CVD
CrossTable(dementia_data$Readmission, dementia_data$CVD, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#Heart failure
CrossTable(dementia_data$Readmission, dementia_data$heart_failure, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#CKD
CrossTable(dementia_data$Readmission, dementia_data$CKD, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#Type 1 diabetes
CrossTable(dementia_data$Readmission, dementia_data$T1DM, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)


#Type 2 diabetes
CrossTable(dementia_data$Readmission, dementia_data$T2DM, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)


#cerebrovasc disease
CrossTable(dementia_data$Readmission, dementia_data$cerebrovasc_disease, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#history of stroke
CrossTable(dementia_data$Readmission, dementia_data$stroke_hx, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#depression
CrossTable(dementia_data$Readmission, dementia_data$depression, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#anxiety
CrossTable(dementia_data$Readmission, dementia_data$anxiety, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)


#insomnia
CrossTable(dementia_data$Readmission, dementia_data$insomnia, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)


#LTC categories
CrossTable(dementia_data$Readmission, dementia_data$LTC_cat, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)


#polypharmacy
CrossTable(dementia_data$Readmission, dementia_data$polypharmacy, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#antipsych meds
CrossTable(dementia_data$Readmission, dementia_data$antipsych_meds, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#medication reviews
CrossTable(dementia_data$Readmission, dementia_data$med_reviews, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#residential care
CrossTable(dementia_data$Readmission, dementia_data$residential_care, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)


#dementia type
CrossTable(dementia_data$Readmission, dementia_data$type, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)


#ethnicity
CrossTable(dementia_data$Readmission, dementia_data$ethnicity_grouped, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)


#region
CrossTable(dementia_data$Readmission, dementia_data$region, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)

#primary care visits post-d/c
CrossTable(dementia_data$Readmission, dementia_data$consults, prop.t=FALSE, prop.chisq=FALSE, chisq=TRUE)


#gp imd group
CrossTable(dementia_data$Readmission, dementia_data$e2015_imd_5, prop.t=FALSE, prop.chisq =FALSE, chisq =TRUE)



#age(continuous)
hist(dementia_data$index_adm_age) #shows normal distribution
t.test(dementia_data$index_adm_age ~ dementia_data$Readmission)

#years to admission(continuous)
hist(dementia_data$years_to_adm) #shows not normal distribution
wilcox.test(dementia_data$years_to_adm ~ dementia_data$Readmission)


sink()


